{
	"manifest_version": 2,

	"name": "Bible Tab",
	"description": "Bible Tab is a browser extension to show a Bible verse every time you open a new tab.",
	"version": "2.0.0",

	"browser_action": {},
	"background": {
		"scripts": ["extension.js"]
	},
	"icons": {
		"32": "./img/icon-32.png",
		"48": "./img/icon-48.png",
		"128": "./img/icon-128.png"
	},
	"permissions": ["activeTab", "storage"],
	"chrome_url_overrides": {
		"newtab": "index.html"
	},
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
